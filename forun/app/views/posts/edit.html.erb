<h1>Edit Post</h1>

<% if @post.errors.any? %>
  <div class="alert alert-danger">
    <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from being saved:</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @post, local: true do |form| %>
  <div>
    <%= form.label :title, "Title" %>
    <%= form.text_field :title, value: @post.title %>
  </div>

  <div>
    <%= form.label :content, "Content" %>
    <%= form.text_area :content, value: @post.content %>
  </div>

  <div>
    <%= form.submit "Update Post", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back to Posts", posts_path, class: "btn btn-secondary" %>
